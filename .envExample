# =================================================================

# =================================================================
# APPLICATION MODE CONFIGURATION
# =================================================================
# Controls how the application runs (auto-set by npm scripts)
APP_MODE=both
NODE_ENV=development

# =================================================================
# DATABASE CONFIGURATION (DYNAMIC WITH BACKEND)
# =================================================================
# Firebase is the primary database for real-time features
USE_FIREBASE=true

# Firebase Configuration (Real-time Database)
FIREBASE_API_KEY=AIzaSyD8xIhB_DYAl9e1FeS7ILql2YfxSdnbqHU
FIREBASE_AUTH_DOMAIN=pcc-5fa54.firebaseapp.com
FIREBASE_DATABASE_URL=https://ipcc-5fa54-default-rtdb.firebaseio.com
FIREBASE_PROJECT_ID=ipcc-5fa54
FIREBASE_STORAGE_BUCKET=ipcc-5fa54.appspot.com
FIREBASE_MESSAGING_SENDER_ID=481875426357
FIREBASE_APP_ID=1:481875426357:web:0ac421ed7e70b95614057c
FIREBASE_MEASUREMENT_ID=G-70NL19SKHL

# MySQL Fallback Configuration
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=
