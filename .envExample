# =================================================================
# API SERVER CONFIGURATION (DYNAMIC PORTS)
# =================================================================
# Backend API Server (auto-configured)
API_PORT=5001
API_HOST=localhost
API_BASE_URL=http://localhost:5001/api

# Frontend Development Server
REACT_APP_API_URL=http://localhost:5001/api
FRONTEND_URL=http://localhost:3000
PORT=3000

# =================================================================
# WEBSOCKET CONFIGURATION (REAL-TIME EFFICIENCY)
# =================================================================
# WebSocket for real-time data streaming (uses same port as API)
WS_PORT=5001
WS_HOST=localhost
WS_URL=ws://localhost:5001/ws
REACT_APP_WS_URL=ws://localhost:5001/ws

# WebSocket Features
WS_AUTH_ENABLED=false
WS_HEARTBEAT_ENABLED=true
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=100
WS_AUTO_RECONNECT=true
WS_RECONNECT_INTERVAL=5000

# =================================================================
# SERIAL COMMUNICATION (IOT SENSORS)
# =================================================================
USE_SERIAL=true
SERIAL_PORT=COM3
SERIAL_BAUDRATE=9600
SERIAL_LINE_DELIMITER=\r\n
SERIAL_AUTO_SCAN=true
SERIAL_DYNAMIC_SWITCHING=true
SERIAL_DB_TABLE=sensor_data

# =================================================================
# SECURITY CONFIGURATION
# =================================================================
# Data Encryption (IMPORTANT: Change these in production!)
DB_ENCRYPTION_KEY=ipcc-secure-key-2024-agricultural-monitoring-system
JWT_SECRET=ipcc-jwt-secret-key-for-authentication-2024
SESSION_SECRET=ipcc-session-secret-for-web-sessions-2024

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# =================================================================
# DEVELOPMENT & DEBUGGING
# =================================================================
# Static File Serving
SERVE_STATIC=false
BUILD_PATH=./build

# Logging
LOG_LEVEL=info
DEBUG_MODE=true
VERBOSE_LOGGING=false

# =================================================================
# REAL-TIME DATA INTERVALS (CUSTOMIZE FOR YOUR NEEDS)
# =================================================================
# Sensor Data Collection (10 seconds for live updates)
SENSOR_DATA_INTERVAL=10000
SENSOR_DATA_RETENTION_DAYS=30

# Task Management (1 minute for task updates)
TASK_UPDATE_INTERVAL=60000
TASK_NOTIFICATION_ENABLED=true

# Financial Data (5 minutes for calculations)
FINANCIAL_DATA_INTERVAL=300000
FINANCIAL_CALCULATIONS_ENABLED=true

# System Metrics (30 seconds for performance)
SYSTEM_METRICS_INTERVAL=30000
PERFORMANCE_MONITORING=true

