# =================================================================
# WEBSOCKET CONFIGURATION (REAL-TIME)
# =================================================================
# WebSocket for real-time data streaming
WS_PORT=5001
WS_HOST=localhost
WS_URL=ws://localhost:5001/ws
REACT_APP_WS_URL=ws://localhost:5001/ws

# WebSocket Features
WS_AUTH_ENABLED=false
WS_HEARTBEAT_ENABLED=true
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=100
WS_LOG_LEVEL=info
WS_AUTO_RECONNECT=true
WS_RECONNECT_INTERVAL=5000

# =================================================================
# SERIAL COMMUNICATION (IOT SENSORS)
# =================================================================
USE_SERIAL=true
SERIAL_PORT=COM3
SERIAL_BAUDRATE=9600
SERIAL_LINE_DELIMITER=\r\n
SERIAL_AUTO_SCAN=true
SERIAL_DYNAMIC_SWITCHING=true
SERIAL_DB_TABLE=sensor_data

# =================================================================
# SECURITY CONFIGURATION
# =================================================================
