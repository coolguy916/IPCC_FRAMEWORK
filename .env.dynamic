# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# =================================================================
# DEVELOPMENT & DEBUGGING
# =================================================================
# Static File Serving
SERVE_STATIC=false
BUILD_PATH=./build

# Logging
LOG_LEVEL=info
DEBUG_MODE=true
VERBOSE_LOGGING=false

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
METRICS_COLLECTION_INTERVAL=30000

# =================================================================
# REAL-TIME DATA CONFIGURATION
# =================================================================
# Sensor Data Collection
SENSOR_DATA_INTERVAL=10000
SENSOR_DATA_RETENTION_DAYS=30
SENSOR_BATCH_SIZE=100

# Task Management
TASK_UPDATE_INTERVAL=60000
TASK_NOTIFICATION_ENABLED=true

# Financial Data
FINANCIAL_DATA_INTERVAL=300000
FINANCIAL_CALCULATIONS_ENABLED=true

# System Metrics
SYSTEM_METRICS_INTERVAL=30000
PERFORMANCE_MONITORING=true

# =================================================================
# FIREBASE REAL-TIME DATABASE RULES
