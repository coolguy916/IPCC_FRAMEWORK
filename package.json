{
  "name": "alprog_electron",
  "version": "1.0.0",
  "description": "hello world",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:web": "react-scripts start",
    "start:web-server": "APP_MODE=web node web-server.js",
    "start:web-server-slave": "APP_MODE=web-slave node web-server-slave.js",
    
    "start:electron-only": "APP_MODE=electron USE_SERIAL=true USE_WS=true npm run start",
    "start:web-only": "concurrently \"APP_MODE=web USE_SERIAL=false npm run start:web-server\" \"npm run start:web\"",
    "start:web-with-electron": "concurrently \"APP_MODE=electron npm run start\" \"APP_MODE=web-slave npm run start:web-server-slave\" \"npm run start:web\"",
    
    "dev:electron": "APP_MODE=electron npm run start",
    "dev:web": "concurrently \"npm run start:web-server\" \"npm run start:web\"",
    "dev:both": "concurrently --names \"ELECTRON,WEB-API,REACT\" \"npm run start:electron-only\" \"npm run start:web-server-slave\" \"npm run start:web\"",
    
    "build:electron": "electron-builder",
    "build:web": "react-scripts build",
    "build": "concurrently \"npm run build:electron\" \"npm run build:web\"",
    
    "switch-db": "node scripts/switch-db.js",
    "check-ports": "node scripts/check-ports.js",
    "clean-locks": "node scripts/clean-locks.js",
    
    "firebase:emulators": "firebase emulators:start",
    "firebase:login": "firebase login",
    "firebase:init": "firebase init",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "alprog_boncos",
  "license": "MIT",
  "devDependencies": {
    "electron": "^36.2.1",
    "firebase-tools": "^13.35.1",
    "concurrently": "^8.2.0"
  },
  "dependencies": {
    "@serialport/parser-readline": "^13.0.0",
    "bcryptjs": "^3.0.2",
    "bootstrap": "^5.3.7",
    "chart.js": "^4.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "firebase": "^11.9.0",
    "firebase-admin": "^12.7.0",
    "mysql2": "^3.14.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.8.0",
    "react-scripts": "5.0.1",
    "serialport": "^13.0.0",
    "ws": "^8.18.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coolguy916/testing_electron_alprog.git"
  },
  "bugs": {
    "url": "https://github.com/coolguy916/testing_electron_alprog/issues"
  },
  "homepage": ".",
