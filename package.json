{
  "name": "alprog_electron",
  "version": "1.0.0",
  "description": "Monitoring System Framework with Electron and React Web Support",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:web": "react-scripts start",
    "start:web-server": "node web-server.js",
    "start:web-server-dev": "NODE_ENV=development node web-server.js",
    
    "start:electron-only": "copy .env.electron .env && APP_MODE=electron USE_SERIAL=true USE_WS=true npm run start",
    "start:web-only": "copy .env.web .env && concurrently \"npm run start:web-server\" \"npm run start:web\"",
    "start:both": "concurrently --names \"ELECTRON,WEB-SERVER,REACT\" \"npm run start:electron-only\" \"npm run start:web-server-dev\" \"npm run start:web\"",
    
    "dev": "npm run start:both",
    "dev:electron": "copy .env.electron .env && NODE_ENV=development npm run start",
    "dev:web": "copy .env.web .env && concurrently --names \"WEB-SERVER,REACT\" \"npm run start:web-server-dev\" \"npm run start:web\"",
    
    "build": "npm run build:web",
    "build:web": "react-scripts build",
    "build:electron": "electron-builder",
    "build:all": "concurrently \"npm run build:web\" \"npm run build:electron\"",
    
    "serve:web": "copy .env.web .env && npm run build:web && npm run start:web-server",
    "serve:electron": "copy .env.electron .env && npm run start:electron-only",
    
    "switch-db": "node scripts/switch-db.js",
    "switch-mode": "node scripts/switch-mode.js",
    "check-ports": "node scripts/check-ports.js",
    "clean-locks": "node scripts/clean-locks.js",
    "setup:web": "node scripts/setup-web.js",
    "setup:electron": "node scripts/setup-electron.js",
    
    "firebase:emulators": "firebase emulators:start",
    "firebase:login": "firebase login",
    "firebase:init": "firebase init",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "author": "alprog_boncos",
  "license": "MIT",
  "devDependencies": {
    "electron": "^36.2.1",
    "firebase-tools": "^13.35.1",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  },
  "dependencies": {
    "@serialport/parser-readline": "^13.0.0",
    "bcryptjs": "^3.0.2",
    "bootstrap": "^5.3.7",
    "chart.js": "^4.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "v4.20.0",
    "firebase": "^11.9.0",
    "firebase-admin": "^12.7.0",
    "mysql2": "^3.14.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.8.0",
    "react-scripts": "5.0.1",
    "serialport": "^13.0.0",
    "ws": "^8.18.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coolguy916/testing_electron_alprog.git"
  },
  "bugs": {
    "url": "https://github.com/coolguy916/testing_electron_alprog/issues"
  },
  "homepage": ".",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:5001"
}